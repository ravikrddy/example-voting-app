pipeline{
    agent any
    tools{
      maven 'Maven 3.6.1'
    }
    stages{
        stage(build){
            steps{
                echo 'Building worker app'
                dir('worker'){
                 sh 'mvn compile'
                }
             }
        }
        stage(test){
            steps{
                echo 'Testing worker app'
                dir('worker'){
                 sh 'mvn test'
                }
            }
        }
        stage(package){
            steps{
                echo 'Packaging worker app'
                dir('worker'){
                 sh 'mvn package -DSkipTests'
                 archiveArtifacts '**/target/*.jar'
                }
            }
        }
    }
    post{
      always{
        echo 'This pipeline is completed..'
      }
   }
}
